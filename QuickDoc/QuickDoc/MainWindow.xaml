<Window x:Class="QuickDoc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuickDoc"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="speechText" HorizontalAlignment="Stretch" Grid.Row="0" Margin="50" FontSize="22 pt"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="startRecordingBtn" Grid.Column="0" Content="Start Commenting" FontSize="20 pt" Width="250" Height="100" Margin="20" HorizontalAlignment="Center"/>
            <Button x:Name="endRecordingBtn" Grid.Column="1" Content="End Commenting" FontSize="20 pt" Width="250" Height="100" Margin="20" HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
